<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0B3C"
    android:padding="16dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/pengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Budgetmu Bulan ini : "
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textSize="16dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/NominalBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/white"
        android:text="1.000.000"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"/>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="2"
        android:padding="16dp">

        <TableRow
            android:padding="10dp"
            android:background="">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/internet"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:padding="4dp"
                android:textColor="@android:color/white"
                android:text="Internet" />
            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:progress="25"/>
            <!--            <TextView-->
            <!--                android:text="0/0"-->
            <!--                android:gravity=""-->
            <!--                android:padding="4dp" />-->
        </TableRow>

        <TableRow
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/food"
                />


            <TextView
                android:layout_column="1"
                android:textColor="@android:color/white"
                android:text="Food"
                android:layout_height="match_parent"
                android:padding="4dp" />
            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:progress="5"/>
            <!--            <TextView-->
            <!--                android:text="0/0"-->
            <!--                android:gravity=""-->
            <!--                android:padding="4dp" />-->
        </TableRow>

        <TableRow android:padding="10dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/entertaint"
                />

            <TextView
                android:layout_column="1"
                android:layout_height="match_parent"
                android:text="Entertaiment"
                android:textColor="@android:color/white"
                android:padding="4dp" />
            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:progress="25"/>
            <!--            <TextView-->
            <!--                android:text="0/0"-->
            <!--                android:gravity=""-->
            <!--                android:padding="4dp" />-->
        </TableRow>




    </TableLayout>






</LinearLayout>
